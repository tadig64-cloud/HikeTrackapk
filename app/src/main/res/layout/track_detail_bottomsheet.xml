<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trackDetailSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="@dimen/hud_bottom_inset">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_titre_de_la_trace_2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_infos_supplmentaires_2"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_distance_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_dure_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvMoving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_en_mouvement_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvPace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_vitesse_moyenne_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvAlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_altitude_minmax_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvGainLoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_d_d_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_dpart_2"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_arrive_2"
        android:paddingBottom="8dp" />

    <!-- Ligne 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_track_detail_bottomsheet_text_partager_2" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_track_detail_bottomsheet_text_exporter_2" />

        <Button
            android:id="@+id/btnRename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_track_detail_bottomsheet_text_renommermodifier_2" />
    </LinearLayout>

    <!-- Ligne 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_track_detail_bottomsheet_text_couleur_2" />

        <Button
            android:id="@+id/btnFollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_track_detail_bottomsheet_text_suivredcouper_2" />

        <Button
            android:id="@+id/btnAlarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_track_detail_bottomsheet_text_alarme_2" />
    </LinearLayout>

    <!-- Ligne 3 : DÃ©tails / Replay / Dossier -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_menu_map_title_dtails_du_parcours_2" />

        <Button
            android:id="@+id/btnReplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_menu_map_title_replay_du_trac_2" />

        <Button
            android:id="@+id/btnOpenFolder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i18n_menu_map_title_ouvrir_le_dossier_2" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i18n_track_detail_bottomsheet_text_supprimer_2"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="12dp" />

</LinearLayout>
