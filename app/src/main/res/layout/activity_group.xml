<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".group.GroupActivity">

    <!-- Top bar: search + admin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Rechercher (id/nom)"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:drawable/edit_text"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Chercher"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btnGroupAdmin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Groupe"
            android:maxLines="1"/>
    </LinearLayout>

    <!-- Map -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:weightSum="5">

        <Button
            android:id="@+id/btnRecordGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● Rec groupe" />

        <Button
            android:id="@+id/btnZoomAll"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Zoom"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

        <Button
            android:id="@+id/btnLabels"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Labels"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

        <Button
            android:id="@+id/btnCluster"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Cluster"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

        <Button
            android:id="@+id/btnSim"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Sim"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

        <Button
            android:id="@+id/btnP2P"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="P2P
Aide"
            android:lines="2"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="11sp"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:contentDescription="Découvrir en P2P (appui long: aide)"/>
    </LinearLayout>

    <!-- Members list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMembers"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="4dp"/>
</LinearLayout>
