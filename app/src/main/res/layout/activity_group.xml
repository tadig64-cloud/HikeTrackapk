<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".group.GroupActivity">

    <!-- Top bar: search + admin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Rechercher (id/nom)"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:drawable/edit_text"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Chercher"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btnGroupAdmin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Groupe"
            android:maxLines="1"/>
    </LinearLayout>

    <!-- Map -->
        <!-- Map -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <!-- Right-side button column (replaces old bottom row to avoid squashed buttons) -->
    <LinearLayout
        android:id="@+id/groupButtonsColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_marginEnd="2dp"
        android:gravity="end"
        android:measureWithLargestChild="true">

<Button
            android:id="@+id/btnRecordGroup"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="end"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="● Rec grp" />

<Button
            android:id="@+id/btnZoomAll"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Zoom"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

<Button
            android:id="@+id/btnLabels"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Labels"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

<Button
            android:id="@+id/btnCluster"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Cluster"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

<Button
            android:id="@+id/btnSim"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Sim"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

<Button
            android:id="@+id/btnP2P"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="P2P
Aide"
            android:lines="2"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="11sp"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:contentDescription="Découvrir en P2P (appui long: aide)"/>
    </LinearLayout>

    </FrameLayout>

<!-- Members list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMembers"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="4dp"/>
</LinearLayout>
